<div id="mainpage">
	<div class="d-flex sidebar">
		<div id="leaderboardSidebar" class="align-self-start">
			<!-- holds the online/playable users? -->
			<table id="leaderboard">
				<tr>
					<th>Leaderboard:</th>
				</tr>
				{{#each users as |x| }}
				{{!-- accesses partial to populate table --}}
				{{> leaderboard_row}}
				{{/each}}
			</table>
			<br>
			<h3 id="userCount"></h3>
			<br>
		</div>
	</div>

	<div id="gameField">
		<button id="playBtn" class="btn btn-info">Play</button>
		<section id="gameGUI" class="align-self-end">
			<div class="score">
				<div class="playerScore">
					<h2>Player</h2>
					<br>
					<p class="p-count count">0</p>

				</div>
				<div class="computerScore">
					<h2>Computer</h2>
					<br>
					<p class="c-count count">0</p>
				</div>
			</div>
			<br>


			<br>

			<br>

			<div class="move">Choose your move</div>

			<!--Number of moves left before game ends -->
			<div class="movesleft">Moves Left: 10 </div>
			<!--Final result of game -->
			<div id="result"></div>
			<br><br><br>
			<!--Options available to player to play game -->
			<div class="options">
				<button id="rockBtn" class="btn btn-info">Rock</button>
				<button id="paperBtn" class="btn btn-info">Paper</button>
				<button id="scissorBtn" class="btn btn-info">Scissors</button>
			</div>

			<!--Reload the game -->
			<button class="reload btn btn-info">Quit</button>
		</section>
	</div>
	{{! <button id="playBtn">Play</button> }}
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="assets/js/game.js"></script>
