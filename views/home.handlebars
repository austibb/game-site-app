<button id="playBtn">Play</button>

<section id="gameGUI" class="align-self-end">
	{{!-- areas for the scores --}}
	<div class="score">
		<div class="playerScore">
			<h2>Player</h2>
			<p class="p-count count">0</p>
		</div>
		<div class="computerScore">
			<h2>Computer</h2>
			<p class="c-count count">0</p>
		</div>
	</div>
	<div class="move">Choose a move</div>
	<div class="movesleft"></div>
{{!-- play options --}}
	<div class="options">
		<button id="rockBtn">Rock</button>
		<button id="paperBtn">Paper</button>
		<button id="scissorBtn">Scissors</button>
	</div>
	<div id="result"></div>
	{{!-- reload page to play again--}}
	<button class="reload">Quit</button>
</section>
</div>
