<div class="d-flex">
	<div class="leaderboard">
	<h3 id="userCount">
	</h3>
<div id="leaderboardSidebar" class="align-self-start" >
	<!-- holds the online/playable users? -->
	<table id="leaderboard">
		<tr>
			<th>Leaderboard:</th>
		</tr>
		{{#each users as |x| }}
		{{!-- accesses partial to populate table --}}
		{{> leaderboard_row}}
		{{/each}}
	</table>
